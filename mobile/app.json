{
  "expo": {
    "name": "Sidekick",
    "slug": "sidekick",
    "version": "1.0.0",
    "scheme": "sidekick",
    "icon": "./assets/brand-icon.png",
    "android": {
      "package": "com.sidekick.deliverytracker",
      "permissions": [
        "RECEIVE_SMS",
        "READ_SMS"
      ],
      "intentFilters": [
        {
          "action": "android.provider.Telephony.SMS_RECEIVED",
          "priority": 999
        }
  ]
    },
    "ios": {
      "bundleIdentifier": "com.sidekick.deliverytracker",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      "expo-dev-client",
      "@react-native-community/datetimepicker"
    ],
    "splash": {
      "backgroundColor": "#000000",
      "resizeMode": "contain"
    },
    "extra": {
      "eas": {
        "projectId": "9ed58529-e307-4cd6-968f-189c90e257fa"
      }
    }
  }
}
