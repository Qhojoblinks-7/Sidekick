{
  "expo": {
    "name": "Sidekick",
    "slug": "sidekick",
    "version": "1.0.0",
    "scheme": "sidekick",
    "icon": "./assets/brand-icon.png",
    "android": {
      "package": "com.sidekick.deliverytracker",
      "permissions": [
        "RECEIVE_SMS",
        "READ_SMS"
      ],
      "intentFilters": [
        {
          "action": "android.provider.Telephony.SMS_RECEIVED"
        }
      ]
    },
    "ios": {
      "bundleIdentifier": "com.sidekick.deliverytracker",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      "expo-dev-client",
      "@react-native-community/datetimepicker",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "minSdkVersion": 34,
            "compileSdkVersion": 36,
            "targetSdkVersion": 36
          }
        }
      ]
    ],
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": []
      }
    },
    "android": {
      "autolinkedLibraries": {
        "exclude": []
      }
    },
    "splash": {
      "backgroundColor": "#000000",
      "resizeMode": "contain"
    },
    "extra": {
      "eas": {
        "projectId": "6f31909f-949b-4db0-a5e6-05facf042e17"
      },
      "router": {}
    }
  }
}
